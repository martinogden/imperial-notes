\typeout{Package: `awlc-statistics'}

% First we call the listings package, which is the whole point of this package
\usepackage{listings}

\definecolor{string}{rgb}{1,0,0}
\definecolor{comment}{rgb}{0,1,0}
\definecolor{keyword}{rgb}{0,1,1}

% Common to all languages
\lstset{ 
	basicstyle			= \ttfamily,
	numbers				= left,
	numberstyle			= \ttfamily\small\color{gray},
	stepnumber			= 2,
	numbersep			= 10pt,
	showspaces			= false,
	showstringspaces	= false,
	showtabs			= false,
	frame				= single,
	tabsize				= 2,
	captionpos			= t,
	breaklines			= true,
	breakatwhitespace	= false,
	title				= \lstname,
	keywordstyle		= \color{keyword},
	commentstyle		= \color{comment},
	stringstyle			= \color{string},
}

\DeclareOption{R}{
	\lstset{
		language = R,
	}
}{}

\DeclareOption{Python}{
	\lstset{
		language = Python,
	}
}{}

\DeclareOption{Mathematica}{
	\lstset{
		language = Mathematica,
		numbers	 = none,
	}
}{}

\ProcessOptions